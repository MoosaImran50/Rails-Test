<br/>
<h1>Products</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Product Name</th>
      <th>Manufacturer</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.manufacturer %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class: "btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-outline-warning" %></td>
        <td><%= button_to 'Delete', product, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New product", new_product_path, class: "btn btn-outline-success" %>
